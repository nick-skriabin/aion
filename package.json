{
  "name": "aion",
  "version": "0.1.0",
  "description": "Terminal calendar client with vim-style keybindings",
  "author": "Nick Skriabin",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nick-skriabin/aion.git"
  },
  "homepage": "https://github.com/nick-skriabin/aion",
  "keywords": [
    "calendar",
    "terminal",
    "tui",
    "vim",
    "google-calendar",
    "cli"
  ],
  "module": "src/index.tsx",
  "type": "module",
  "bin": {
    "aion": "./dist/aion"
  },
  "scripts": {
    "dev": "bun run src/index.tsx",
    "build": "bun build --compile src/index.tsx --outfile dist/aion",
    "build:linux-x64": "bun build --compile --target=bun-linux-x64 src/index.tsx --outfile dist/aion-linux-x64",
    "build:linux-arm64": "bun build --compile --target=bun-linux-arm64 src/index.tsx --outfile dist/aion-linux-arm64",
    "build:darwin-x64": "bun build --compile --target=bun-darwin-x64 src/index.tsx --outfile dist/aion-darwin-x64",
    "build:darwin-arm64": "bun build --compile --target=bun-darwin-arm64 src/index.tsx --outfile dist/aion-darwin-arm64",
    "build:all": "bun run build:linux-x64 && bun run build:linux-arm64 && bun run build:darwin-x64 && bun run build:darwin-arm64",
    "db:generate": "bunx drizzle-kit generate",
    "db:migrate": "bun run src/db/migrate.ts"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "@nick-skriabin/glyph": "^0.1.50",
    "chrono-node": "^2.9.0",
    "drizzle-orm": "^0.38.3",
    "html-to-text": "^9.0.5",
    "jotai": "^2.10.4",
    "lunr": "^2.3.9",
    "luxon": "^3.5.0",
    "react": "^19.0.0",
    "react-error-boundary": "^6.1.0",
    "rrule": "^2.8.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/html-to-text": "^9.0.4",
    "@types/iarna__toml": "^2.0.5",
    "@types/lunr": "^2.3.7",
    "@types/luxon": "^3.4.2",
    "@types/react": "^19.0.0",
    "drizzle-kit": "^0.30.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
